@model ChangePasswordViewModel
@{
    ViewData["Title"] = "Change Password";
}

<div class="container">

    <div>
        <h2 class="center-align">@ViewData["Title"]</h2>

    </div>


    <div class="row">
        <h4 class="center-align">Change Password Form</h4>

        <form asp-controller="Manage" asp-action="ChangePassword" method="post" class="form-horizontal">
            <div class="row center-align">
                <div asp-validation-summary="All" class="red-text text-darken-2"></div>

            </div>

            <div class="row">

                <div class="input-field col s12">
                    <label asp-for="OldPassword"></label>
                    <input asp-for="OldPassword" class="validate" />
                    <span asp-validation-for="OldPassword" class="red-text text-darken-2"></span>
                </div>
            </div>


            <div class="row">
                <div class="input-field col s12">
                    <label asp-for="NewPassword"></label>
                    <input asp-for="NewPassword" class="validate" />
                    <span asp-validation-for="NewPassword" class="red-text text-darken-2"></span>
                </div>
            </div>
            <div class="row">
                <div class="input-field col s12">
                    <label asp-for="ConfirmPassword"></label>

                    <input asp-for="ConfirmPassword" class="validate" />
                    <span asp-validation-for="ConfirmPassword" class="red-text text-darken-2"></span>
                </div>
            </div>
            <div class="row">
                <div class="input-field col s12">
                    <button type="submit" class="btn waves-effect waves-light btn-small teal lighten-1red accent-3">Change password</button>
                </div>
            </div>
        </form>
    </div>
</div>






@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
