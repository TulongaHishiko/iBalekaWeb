@model RegisterViewModel
@{
    ViewData["Title"] = "Register";
}

<form asp-controller="Account" asp-action="Register" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post">
    <div class="mdl-grid">
        <div class="mdl-cell mdl-cell--12-col ">
            <div class="mdl-grid">
                <div class="mdl-layout-spacer"></div>
                <div class="mdl-cell mdl-cell--12-col">
                    <div class="mdl-typography--display-1" style="text-align:center;">Register with iBaleka</div>
                    <hr />
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="mdl-grid">
                        <div class="mdl-layout-spacer"></div>
                        <div class="form-group mdl-cell mdl-cell--3-col">
                            <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                                <label asp-for="UserName" class="mdl-textfield__label"></label>

                                <input asp-for="UserName" class="mdl-textfield__input" />
                                <span asp-validation-for="UserName" class="text-danger"></span>

                            </div>
                        </div>
                        <div class="mdl-layout-spacer"></div>
                    </div>
                    
                    <div class="mdl-grid">
                        <div class="mdl-layout-spacer"></div>
                        <div class="form-group mdl-cell mdl-cell--3-col">
                            <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                                <label asp-for="Email" class="mdl-textfield__label"></label>

                                <input asp-for="Email" class="mdl-textfield__input" />
                                <span asp-validation-for="Email" class="text-danger"></span>

                            </div>
                        </div>
                        <div class="mdl-layout-spacer"></div>
                    </div>
                    <div class="mdl-grid">
                        <div class="mdl-layout-spacer"></div>
                        <div class="form-group mdl-cell mdl-cell--3-col">
                            <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                                <label asp-for="Password" class="mdl-textfield__label"></label>

                                <input asp-for="Password" class="mdl-textfield__input" />
                                <span asp-validation-for="Password" class="text-danger"></span>

                            </div>
                        </div>
                        <div class="mdl-layout-spacer"></div>
                    </div>
                    <div class="mdl-grid">
                        <div class="mdl-layout-spacer"></div>
                        <div class="form-group mdl-cell mdl-cell--3-col">
                            <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                                <label asp-for="ConfirmPassword" class="mdl-textfield__label"></label>

                                <input asp-for="ConfirmPassword" class="mdl-textfield__input" />
                                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>

                            </div>
                        </div>
                        <div class="mdl-layout-spacer"></div>
                    </div>
                </div>
                <div class="mdl-layout-spacer"></div>
            </div>
            <div class="mdl-grid">
                <div class="mdl-layout-spacer"></div>
                <div class="mdl-cell mdl-cell--4-col">
                    <button type="submit" class="mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-button--accent">Register</button>
                </div>


            </div>
        </div>
    </div>
</form>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }

}
