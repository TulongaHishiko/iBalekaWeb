<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - All Blacks</title>
    <environment names="Development">
        <link rel="stylesheet" href="~/lib/bootswatch/paper/bootstrap.min.css" />
        <link rel="stylesheet" href="~/css/site.css" />
        <link href="~/lib/jquery-ui/themes/base/jquery-ui.css" rel="stylesheet" />
        <link rel="stylesheet" href="~/css/dashboard.css" />
        <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
        <link href="~/lib/material-design-lite/material.css" rel="stylesheet" />
        <link href="~/css/simple-sidebar.css" rel="stylesheet" />
    </environment>
    <environment names="Staging,Production">
        <link rel="stylesheet" href="~/lib/bootswatch/paper/bootstrap.min.css" />
        <link rel="stylesheet" href="~/css/site.css" />
        <link href="~/lib/jquery-ui/themes/base/jquery-ui.css" rel="stylesheet" />
        <link rel="stylesheet" href="~/css/dashboard.css" />
        <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
        <link href="~/lib/material-design-lite/material.css" rel="stylesheet" />
        <link href="~/css/simple-sidebar.css" rel="stylesheet" />


        @*<link rel="stylesheet" href="https://ajax.aspnetcdn.com/ajax/bootstrap/3.3.6/css/bootstrap.min.css"
            asp-fallback-href="~/lib/bootstrap/dist/css/bootstrap.min.css"
            asp-fallback-test-class="sr-only" asp-fallback-test-property="position" asp-fallback-test-value="absolute" />*@

    </environment>
    <style>
        body{
            display: initial;
        }
    </style>
    @RenderSection("AddToHead", required: false)
</head>
<body>
    <!-- /#wrapper -->
    <div class="mdl-layout mdl-js-layout mdl-layout--fixed-header">
        <header class="mdl-layout__header">
            <div class="mdl-layout-icon"></div>
            <div class="mdl-layout__header-row">
                <span class="mdl-layout__title"><a asp-controller="Home" asp-action="Index">iBaleka</a></span>
                <div class="mdl-layout-spacer"></div>
                <nav class="mdl-navigation mdl-layout--large-screen-only">
                    <a class="mdl-navigation__link mdl-typography--text-uppercase" asp-controller="Home" asp-action="About">About</a>
                    <a class="mdl-navigation__link mdl-typography--text-uppercase" asp-controller="Home" asp-action="Contact">Contact</a>
                    <a class="mdl-navigation__link mdl-typography--text-uppercase" asp-controller="Manage" asp-action="Index" title="Manage">Settings</a>
                    @await Html.PartialAsync("_LoginPartial")
                </nav>
            </div>
        </header>
        <div class="mdl-layout__drawer">
            <span class="mdl-layout__title">iBaleka</span>
            <nav class="mdl-navigation">
                <a class="mdl-navigation__link mdl-typography--text-uppercase" asp-controller="Home" asp-action="Index">Home</a>
                <a class="mdl-navigation__link mdl-typography--text-uppercase" asp-controller="Event" asp-action="Events">Events</a>
                <a class="mdl-navigation__link mdl-typography--text-uppercase" asp-controller="Map" asp-action="SavedRoutes">Saved Routes</a>
                <a class="mdl-navigation__link mdl-typography--text-uppercase" asp-controller="Map" asp-action="Map">Map a Route</a>
                <div class="android-drawer-separator mdl-layout--small-screen-only"></div>
                <span class="mdl-layout--small-screen-only"><a class="mdl-navigation__link mdl-typography--text-uppercase mdl-layout--small-screen-only" asp-controller="Home" asp-action="About">About</a></span>
                <span class="mdl-layout--small-screen-only"><a class="mdl-navigation__link mdl-typography--text-uppercase mdl-layout--small-screen-only" asp-controller="Home" asp-action="Contact">Contact</a></span>
                <span class="mdl-layout--small-screen-only"><a class="mdl-navigation__link mdl-typography--text-uppercase mdl-layout--small-screen-only" asp-controller="Manage" asp-action="Index" title="Manage">Settings</a></span>
                <span class="mdl-typography--text-uppercase mdl-layout--small-screen-only">@await Html.PartialAsync("_LoginPartial")</span>

            </nav>
        </div>



        <main class="mdl-layout__content">
            @RenderBody()

        </main>
        <footer class="mdl-mini-footer" style="padding:0;">
            <div class="mdl-mini-footer__left-section">
                <div class="mdl-logo">iBaleka</div>
            </div>
        </footer>


    </div>


    <environment names="Development,Production">
        <script src="~/lib/jquery/dist/jquery.js"></script>
        <script src="~/lib/jquery-ui/jquery-ui.js"></script>
        <script src="~/lib/material-design-lite/material.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>
    </environment>

    <environment names="Staging,Production">
        <script src="https://ajax.aspnetcdn.com/ajax/jquery/jquery-2.1.4.min.js"
                asp-fallback-src="~/lib/jquery/dist/jquery.min.js"
                asp-fallback-test="window.jQuery">
        </script>
        <script src="~/lib/jquery-ui/jquery-ui.js"></script>
        <script src="~/lib/material-design-lite/material.js"></script>
        <script src="https://ajax.aspnetcdn.com/ajax/bootstrap/3.3.5/bootstrap.min.js"
                asp-fallback-src="~/lib/bootstrap/dist/js/bootstrap.min.js"
                asp-fallback-test="window.jQuery && window.jQuery.fn && window.jQuery.fn.modal"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>

        
       
    </environment>
    @RenderSection("Scripts", required: false)

</body>

</html>
