@model IEnumerable<iBalekaWeb.Models.Route>
@section AddToHead {
    <link rel="stylesheet" href="~/css/mapStyle.css" />
}
@{
    ViewData["Title"] = "SavedRoutes";
}

<h2>SavedRoutes</h2>

<p>
    <a>Saved Routes</a>
</p>
<form asp-action="DeleteRoute">
    <ul class="list-group" id="routeList">
        @foreach (var route in Model)
        {
            string totalDistance = "";

            if (route.Distance > 999) { totalDistance = Math.Round((route.Distance / 1000),2).ToString() + "km"; } else { totalDistance = route.Distance.ToString() + "m"; }

            <li class="list-group-item">
                <span class="badge">
                        @Html.ActionLink("Delete", "DeleteRoute", new { id = route.RouteId })
                  
                </span>
                <span class="badge">@totalDistance</span>
                @Html.ActionLink(route.Title, "EditRoute", new { id = route.RouteId })
            </li>
        }
    </ul>
</form>
@section Scripts {
    <script src=@Url.Content("~/js/ibalekaMap.js")></script>
}
