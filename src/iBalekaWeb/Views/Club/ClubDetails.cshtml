@model iBalekaWeb.Models.Club
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager
@using iBalekaWeb.Models
<style>
    body {
        overflow-y: visible;
    }
</style>

<div class="row" style="padding-bottom:-5% !important;">
    <div class="col s12">
        <div class="card blue-grey darken-1">
            <div class="card-content white-text">
                <span id="eventTiteText" class="card-title">@Html.DisplayFor(model => model.Name)</span>
                <span class="card-title right">Club Details</span>
                <div class="row">
                    <div class="col s6">
                        <span class="left-align flow-text">@Html.DisplayFor(model => model.Description)</span>
                    </div>
                    <div class="col s6">
                        Club Location: <span class="left-align flow-text">@Html.DisplayFor(model => model.Location)</span><br/>
                        Date Created: <span class="left-align flow-text">@Html.DisplayFor(model => model.DateCreated)</span>
                    </div>
                </div>
                <div class="card-action">
                    <div class="row">
                        <div class="col s12">
                            <ul class="red tabs">
                                <li class="tab col s4 white-text"><a class="active" href="#members">Members</a></li>
                                <li class="tab col s4 white-text"><a href="#events">Events</a></li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col s12">
        <div id="members">
            @if (ViewBag.ClubMembers.Count > 0)
            {
                <ul class="collection">
                    @foreach (ClubMember club in ViewBag.ClubMembers)
                    {
                        <li class="collection-item">
                            <div>
                                @Html.ActionLink(club.Athlete.UserName + "- Joined on: " + club.DateJoined, "MemberDetails", new { id = club.MemberId })
                                <a class="secondary-content" href=@Url.Action("DeRegisterMember", "Club", new { id = club.MemberId })>
                                    <i class="material-icons">
                                        delete
                                    </i>
                                </a>
                            </div>
                        </li>
                    }
                </ul>
            }
            else
            {
                <h5 class="center">Currently no Members in club</h5>
            }
        </div>
        <div id="events">
            @if (ViewBag.ClubEvents.Count >0)
            {
                <ul class="collection">
                    @foreach (Event club in ViewBag.ClubEvents)
                    {
                        <li class="collection-item">
                            <div>
                                @Html.ActionLink(club.Title + "-" + club.Location, "EventDetails","Event", new { id = club.EventId })
                                <a class="secondary-content" href=@Url.Action("DeleteEvent", "Event", new { id = club.EventId })>
                                    <i class="material-icons">
                                        delete
                                    </i>
                                </a>
                            </div>
                        </li>
                    }
                </ul>
            }
            else
            {
                <h5 class="center">Currently no events made by club</h5>
            }
        </div>
    </div>
</div>
<div class="row">
    <div class="col s4 left-align ">
        <a class="btn waves-effect waves-light btn-large red accent-3" asp-action="Clubs">
            Back to List
        </a>
    </div>
    <div class="col s4 center-align ">
        @Html.ActionLink("Edit", "EditClub", new { id = Model.ClubId }, new { @class = "btn waves-effect waves-light btn-large red accent-3" })

    </div>
    <div class="col s4 right-align ">
        @Html.ActionLink("Delete", "DeleteClub", new { id = Model.ClubId }, new { @class = "btn waves-effect waves-light btn-large red accent-3" })
    </div>
</div>
<script src="/lib/jquery/dist/jquery.js"></script>
<script>
    $(document).ready(function () {
        var source = '@(ViewBag.SourcePageClub)';
        if (source != null) {
            if (source == "Edit") {
                var $toastContent = $('<span>Club was successfully Updated...</span>');
                Materialize.toast($toastContent, 5000);
                source = null;
            }
        }
    });
</script>



