@model iBalekaWeb.Models.EventViewModels.EventViewModel
@using iBalekaWeb.Models.EventViewModels
@using iBalekaWeb.Models
<style>
    body {
        overflow-y: visible;
    }
</style>
@{
    ViewData["Title"] = "Event Details";


}

<div class="row">
    <div class="col s12">
        <div class="card blue-grey darken-1">
            <div class="card-content white-text">
                <span id="eventTiteText" class="card-title">@Html.DisplayFor(model => model.Title)</span>
                <div class="row">
                    <div class="col s6">
                        @Html.DisplayFor(model => model.Description)
                    </div>
                    <div class="col s6">
                        @Html.DisplayFor(model => model.Location)<br />
                        Time until event starts:
                    </div>
                </div>
            </div>
            <div class="card-action">
                <ul class="tabs red white-text">
                    <li class="tab col s4 white-text"><a class="active" href="#eventDetails">Event Details</a></li>
                    <li class="tab col s4 white-text"><a href="#registeredAthletes">Registered Athletes</a></li>
                </ul>
            </div>
        </div>
    </div>
</div>
<div class="row" id="eventDetails">
    <div class="col s12">
        <h5 class="center">Details</h5>
        <div class="row">
            <div class="col s6">
                <div class="row">
                    <div class="col s6">
                        <div class="date">
                            <span class="day">30</span>
                            <span class="month">Jun</span>
                            <span class="year">2009</span>
                        </div>
                    </div>
                    <div class="col s6">
                        <div class="time">
                            <span class="hour">12</span>
                            <span class="">:</span>
                            <span class="minute">00</span>
                            <span class="meridiem">PM</span>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col s6">
                @if (Model.EventRoutes.Count() > 0)
                {
                    <div class="row">
                        @foreach (EventRouteViewModel evntRoute in Model.EventRoutes)
                        {
                            <div class="col s3">
                                <i class="material-icons medium">room</i><br />
                                <span>@evntRoute.Title</span>
                            </div>
                        }
                    </div>
                }
            </div>
        </div>
    </div>
</div>
<div class="row" id="registeredAthletes">
    <div class="col s12">
        <h5 class="center">Registered Athletes</h5>
        <div class="row">
            <div class="col s12">
                @if ((ViewBag.RegisteredAthletes as IEnumerable<EventRegistration>).Count() > 0)
                {
                    <ul class="collection">
                        @foreach (EventRegistration reg in ViewBag.RegisteredAthletes)
                        {
                            <li class="collection-item">@Html.ActionLink(reg.Athlete.Name + " " + reg.Athlete.Surname, "AthleteDetails", new { id = reg.Athlete.AthleteId })</li>
                        }
                    </ul>
                }
                else
