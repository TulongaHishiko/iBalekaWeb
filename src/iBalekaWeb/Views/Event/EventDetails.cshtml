    </div>

</div>






<div class="row" id="registeredAthletes">
    <div class="col s12">
        <h5 class="center">Registered Athletes</h5>
        <div class="row">
            <div class="col s12">
                @if ((ViewBag.RegisteredAthletes as IEnumerable<EventRegistration>).Count() > 0)
                {
                    <ul class="collection">
                        @foreach (EventRegistration reg in ViewBag.RegisteredAthletes)
                        {
                            <li class="collection-item">@Html.ActionLink(reg.Athlete.Name + " " + reg.Athlete.Surname, "AthleteDetails", new { id = reg.Athlete.AthleteId })</li>
                        }
                    </ul>
                }
                else
                {
                    <h5 class="center">No Athletes Registered</h5>
                }

            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col s4 left-align ">
        <a class="btn waves-effect waves-light btn-large teal lighten-1" asp-action="Events">
            Back to List
        </a>
    </div>
    <div class="col s4 center-align ">
        @Html.ActionLink("Edit", "EditEvent", new { id = Model.EventId }, new { @class = "btn waves-effect waves-light btn-large teal lighten-1" })
    </div>
    <div class="col s4 right-align ">
        @Html.ActionLink("Delete", "DeleteEvent", new { id = Model.EventId }, new { @class = "btn waves-effect waves-light btn-large teal lighten-1" })
    </div>
</div>
<script src="/lib/jquery/dist/jquery.js"></script>
<script>
    $(document).ready(function () {

        var source = '@(ViewBag.SourcePageEvent)';
        if (source != null) {
            if (source == "Edit") {
                var $toastContent = $('<span>Event was successfully Updated...</span>');
                Materialize.toast($toastContent, 5000);

                source = null;
            }
        }
    });
</script>
